{
  "homepage": "https://malinowski-luke.github.io/portfolio",
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "^18.x"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "gh-pages": "^6.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "sass": "^1.54.5",
    "serve": "^14.2.4",
    "vh-check": "^2.0.5",
    "web-vitals": "^3.0.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "dev": "react-scripts start",
    "start": "serve -s build",
    "test:staged": "CI=true npm run test -- App.test.js",
    "test": "react-scripts test",
    "prepare": "husky install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "display": "standalone",
  "main": "index.js",
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4"
  },
  "lint-staged": {
    "**/**.{js,jsx,scss,css,json}": [
      "prettier --write"
    ],
    "**/*.{js,jsx}": [
      "npm run test:staged"
    ]
  }
